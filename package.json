    "parse-duration": "^1.0.0",
    "path-to-regexp": "^6.2.0",
    "prisma": "^3.1.1",
    "randomstring": "^1.2.1",
    "reload": "^3.2.0",
    "rss-parser": "^3.12.0",
    "sanitize-html": "^2.4.0",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  }
}
