{
  "files.exclude": {
    "node_modules": true,
    "public/dist": true,
    ".parcel-cache": true,
    "dist": true,
    "feedo.db*": true,
    ".env": true,
    "*.db": true,
    "*.db-journal": true,
    "*.tgz": true,
    "acceptance/screenshots": true,
    ".reload": true,
    ".next": true,
    "test-results/": true,
    "playwright-report/": true,
    "playwright/.cache/": true
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "editor.formatOnSave": true,
  "tailwindCSS.experimental.classRegex": [
    // "cn\\(([^)]*)\\)",
    ["cn\\(([^)]*)\\)", "\"([^\"]*)\""]
  ],
  "editor.quickSuggestions": {
    "strings": true
  },
  "javascript.preferences.importModuleSpecifierEnding": "js"

  // "tailwindCSS.includeLanguages": { "javascript": "html" }
}
